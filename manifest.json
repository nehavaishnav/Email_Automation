{
    "manifest_version": 3,
    "name": "Gmail AI Summarizer",
    "version": "1.0",
    "permissions": ["scripting", "activeTab", "tabs"],
    "host_permissions": ["https://mail.google.com/*"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html"
    }
  }
  